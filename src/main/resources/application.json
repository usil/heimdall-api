{  
  "title":"Heimdall Monitor",
  "login": {
    "engine": "microsoft",
    "default": {
      "redirectWebBaseurl": "${HEIMDALL_WEB_BASE_URL}",
      "authorizeUrl": "/v1/sing-in/default",
      "loginHeaderColor": "#5e72e4"
    },
    "microsoft": {
      "oauth2BaseUrl": "https://login.microsoftonline.com",
      "userDetailsApiEndpoint": "https://graph.microsoft.com/v1.0/me",
      "responseType": "token",
      "responseMode": "query",
      "clientId": "${MICROSOFT_CLIENT_ID}",
      "clientSecret": "${MICROSOFT_CLIENT_SECRET}",
      "redirectUri": "${MICROSOFT_REDIRECT_URL}",
      "tenant": "${MICROSOFT_TENANT}",
      "scopes": ".default"
    }
  },
  "database": {
    "host": "${HEIMDALL_DATABASE_HOST}",
    "port": "${HEIMDALL_DATABASE_PORT}",
    "user": "${HEIMDALL_DATABASE_USER}",
    "password": "${HEIMDALL_DATABASE_PASSWORD}",
    "name": "${HEIMDALL_DATABASE_NAME}"
  },
  "oauth2": {
    "jwtSecret": "changeme",
    "jwtExpiration": "3600s",
    "disableRoutes": true,
    "defaultAdminUser": "admin",
    "defaultAdminPassword": "changeme"
  },
  "websites": [
    {
      "url": "https://erp.usil.edu.pe",
      "name": "erp-usil",
      "description": "ERP USIL",
      "expected_code": 200,
      "cronExpression": "*/59 * * * * *"
    },
    {
      "url": "https://usil.edu.pe",
      "name": "web-usil",
      "description": "Web USIL",
      "expected_code": 500,
      "cronExpression": "*/59 * * * * *"
    },
    {
      "url": "https://infosil.usil.edu.pe/login",
      "name": "infosil-v3",
      "description": "Infosil V3",
      "expected_code": 200,
      "cronExpression": "*/59 * * * * *"
    }
  ]
}