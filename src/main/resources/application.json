{  
  "title":"Heimdall Monitor",
  "login": {
    "engine": "microsoft",
    "default": {
      "redirectWebBaseurl": "${HEIMDALL_WEB_BASE_URL}",
      "authorizeUrl": "/v1/sing-in/default",
      "loginHeaderColor": "#5e72e4"
    },
    "microsoft": {
      "oauth2BaseUrl": "${MICROSOFT_OAUTH2_BASE_URL}",
      "userDetailsApiEndpoint": "${MICROSOFT_USER_DETAILS_API_ENDPOINT}",
      "responseType": "code",
      "responseMode": "query",
      "clientId": "${MICROSOFT_CLIENT_ID}",
      "clientSecret": "${MICROSOFT_CLIENT_SECRET}",
      "redirectUri": "${MICROSOFT_REDIRECT_URL}",
      "tenant": "${MICROSOFT_TENANT}",
      "scopes": "user.read"
    }
  },
  "database": {
    "host": "${HEIMDALL_DATABASE_HOST}",
    "port": "${HEIMDALL_DATABASE_PORT}",
    "user": "${HEIMDALL_DATABASE_USER}",
    "password": "${HEIMDALL_DATABASE_PASSWORD}",
    "name": "${HEIMDALL_DATABASE_NAME}"
  },
  "oauth2": {
    "jwtSecret": "changeme",
    "jwtExpiration": "3600s",
    "disableRoutes": true,
    "defaultAdminUser": "${DEFAULT_ADMIN_USER}",
    "defaultAdminPassword": "${DEFAULT_ADMIN_PASSWORD}"
  },
  "websites": [
    {
      "url": "https://github.com",
      "name": "github",
      "description": "github",
      "expected_code": 200,
      "cronExpression": "*/59 * * * * *"
    },
    {
      "url": "https://es.wikipedia.org",
      "name": "wikipedia",
      "description": "wikipedia",
      "expected_code": 302,
      "cronExpression": "*/59 * * * * *"
    },
    {
      "url": "https://www.speedtest.net",
      "name": "speedtest",
      "description": "speedtest",
      "expected_code": 200,
      "cronExpression": "*/59 * * * * *"
    }
  ]
}